<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 flex flex-col justify-center items-center text-white px-10 py-5">
    <h1 class="text-3xl font-bold mb-8">Create a New Post</h1>
    <form class="max-w-md mx-auto" action="/createpost" method="post" enctype="multipart/form-data">
        <div class="mb-6">
            <label for="image" class="block text-lg mb-2">Upload Image</label>
            <input type="file" id="image" class="block w-full bg-zinc-700 rounded-md py-2 px-4 text-white" accept="image/*" name="postimage">
        </div>
        <div class="mb-6">
            <label for="title" class="block text-lg mb-2">Title</label>
            <input type="text" id="title" class="text-black block w-full bg-zinc-700 rounded-md py-2 px-4 text-white" placeholder="Title" name="title">
        </div>
        <div class="mb-6">
            <label for="description" class="block text-lg mb-2">Description</label>
            <textarea id="description" class="text-black block w-full bg-zinc-700 rounded-md py-2 px-4 text-white" placeholder="Description" name="description"></textarea>
        </div>
        <button type="submit" class="bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition duration-300" value="Create Post">Create Post</button>
    </form>
</div>
<% include ./partials/footer.ejs %>
