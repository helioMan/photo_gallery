<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
    <div class="cards flex flex-wrap gap-10">
        <% posts.forEach((elem) => { %>
            <div class="card w-48">
                <div class="w-full h-56 bg-sky-200 rounded-lg overflow-hidden">
                    <img src="/images/uploads/<%= elem.image %>" class="w-full h-full object-cover" alt="">
                </div>
                <h1 class="mt-2 text-sm"><%= elem.title %></h1>
                <h1 class="text-xs font-semibold opacity-500"><%= elem.user.username %></h1>
            </div>
        <% }) %>
    </div>
</div>
<% include ./partials/footer.ejs %>
